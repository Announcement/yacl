{
    "compilerOptions": {
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "target": "ESNext",
        "jsx": "react-jsx",
        "allowImportingTsExtensions": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "checkJs": true,
        "allowJs": true,
        "noEmit": true
    },
    "exclude": [
        "node_modules",
        "**/node_modules/*"
    ]
}